<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- 引用的application.yml的配置 -->
	<springProperty scope="context" name="logLevel" source="log.level"/>
	<springProperty scope="context" name="logPath" source="log.path"/>
	<springProperty scope="context" name="logPrefix" source="log.prefix"/>
	<springProperty scope="context" name="logKeep" source="log.keep"/>
	<springProperty scope="context" name="logSeparator" source="log.separator"/>
	<springProperty scope="context" name="logSuffix" source="log.suffix"/>

	<!-- 输出到控制台的日志配置 -->
	<appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<!--格式化输出，详细请参考log4j API -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%thread] %C.%M: %m%n</pattern>
		</encoder>
	</appender>

	<!-- 所有日志 -->
	<appender name="rollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${logPath}/${logPrefix}${logKeep}${logSeparator}${logSuffix}</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<!-- 日志文件备份的文件名 -->
			<FileNamePattern>${logPath}/${logPrefix}%d{yyyy-MM-dd}_%i${logSeparator}${logSuffix}</FileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%thread] %C.%M: %m%n</pattern>
		</encoder>
	</appender>

	<root level="${logLevel}">
		<appender-ref ref="rollingFileAppender" />
		<appender-ref ref="consoleAppender" />
	</root>
</configuration>
